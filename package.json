{
  "name": "Playlister",
  "version": "0.1.0",
  "description": "Transform tracklist to Spotify playlist",
  "scripts": {
    "test": "tape tests/test.js | tap-spec",
    "clean": "rm -r dist/*",
    "build:js": "browserify src/js/app.js | uglifyjs -o dist/app.js",
    "build:css": "node-sass src/scss/base.scss | cleancss -o dist/base.css",
    "build:html": "cp src/index.html dist/",
    "build": "npm run clean && npm run build:html && npm run build:css && npm run build:js",
    "watch:js": "watch 'npm run build:js' src/js",
    "watch:css": "watch 'npm run build:css' src/scss",
    "watch:html": "watch 'npm run build:html' src/",
    "watch": "parallelshell 'npm run watch:js' 'npm run watch:css' 'npm run watch:html'",
    "serve": "http-server -p 9090 dist/",
    "live-reload": "live-reload --port 9091 dist/",
    "start": "npm run serve",
    "open:dev": "opener http://localhost:9090",
    "dev": "npm run open:dev -s; parallelshell 'npm run live-reload -s' 'npm run serve -s' 'npm run watch -s'"
  },
  "author": "Harmen Janssen",
  "license": "CC0-1.0",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.24.0",
    "babelify": "^7.3.0",
    "browserify": "^14.1.0",
    "uglifyjs": "^2.4.10"
  },
  "dependencies": {
    "clean-css-cli": "^4.0.10",
    "http-server": "^0.9.0",
    "live-reload": "^1.1.0",
    "node-sass": "^4.5.2",
    "opener": "^1.4.3",
    "parallelshell": "^2.0.0",
    "ramda": "^0.17.1",
    "spotify-web-api-js": "^0.15.0",
    "watch": "^1.0.2"
  }
}
