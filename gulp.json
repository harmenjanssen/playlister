{
  "app": {
    "domain": "localhost.playlister.com"
  },
  "paths": {
    "src": "./src",
    "dist": "./dist"
  },
  "tasks": {
    "icons": {
      "src": "./assets/images/icons/**/*.svg",
      "dist": "./dist/images"
    },
    "images": {
      "src": "./assets/images/**/*.{png,gif,jpg,jpeg,svg}",
      "dist": "./dist/images"
    },
    "javascript": {
      "src": "./src/js/**/*.js",
      "dist": "./dist/js",
      "main": "./src/js/app.js",
      "bundle": "app.js"
    },
    "sass": {
      "src": "./src/scss/**/*.scss",
      "dist": "./dist/css",
      "main": "./src/scss/base.scss"
    }
  }
}
